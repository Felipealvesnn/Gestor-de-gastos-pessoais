                        <input asp-for="LocalGasto.Cnhpj" class="form-control">
                        <span asp-validation-for="LocalGasto.Cnhpj" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LocalGasto.Telefone" class="form-label"></label>
                        <input asp-for="LocalGasto.Telefone" class="form-control">
                        <span asp-validation-for="LocalGasto.Telefone" class="text-danger"></span>
                    </div>

            
                </form>

            </div>
            <div class="modal-footer">
